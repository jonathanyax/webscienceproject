nav
	div#user
		if (!user)
			a(href="/signin")
				span.user_icon_wrap
					span.icon_wrap
						span.icon
							i.fa.fa-lock
						span.icon_title Sign In
		if (user)
			a(href="/logout")
				span.user_icon_wrap.user_loggedin
					img(src="#{user.picture}")
					span.icon_wrap
						span.icon
							i.fa.fa-lock
						span.icon_title Log Out
	ul#logo
		li 
			h1.onpoint_title
				a(href="/")
					span.onpoint_title_text On Point
					span.icon-onpoint
	ul#functions
		li
			a(href="/", class=(active === 'home' ? 'current' : ''))
				span.icon
					span.icon-home
				span.icon_title home
		li
			a(href="/regions", class=(active === 'regions' ? 'current' : ''))
				span.icon
					span.icon-regions
				span.icon_title regions
		li#userprofile
			a(href="/profile", class=(active === 'profile' ? 'current' : ''))
				span.icon
					span.icon-user
