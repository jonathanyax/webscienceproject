extend layout

block content
	section#messages.container
		p
			strong= info
	section#signin_accounts.container
		div#signin.one-half.column
			h3 Sign-In
			form(action="/signin" method="post")
				input(type="text", name="username", placeholder="Username", value=signin_username).u-full-width
				input(type="password", name="password", placeholder="Password").u-full-width
				input(type="submit", value="Sign In")
			a(href="#") Forgot Password?
		div#joinus.one-half.column
			h3 Join Us
			form(action="/register", method="post")
				input(type="text", name="fullName", placeholder="Full Name").u-full-width
				input(type="text", name="username", placeholder="Username", value=join_username).u-full-width
				input(type="email", name="email", placeholder="E-mail").u-full-width
				input(type="password", name="password", placeholder="Password").u-full-width
				input(type="submit", value="Join Us")
			a(href="/auth/facebook") Login via Facebook