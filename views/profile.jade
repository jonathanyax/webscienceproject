// This page should somehow redirect to the sign-in page if
// user is not logged in.

extend layout

block content
	section#profile.container
		h1 Hi, #{user.fullName}!
		if (user)
			ul
				if(!user.oauthID)
					li
						strong Username: 
						span #{user.username}
				li
					strong E-mail: 
					span #{user.email}