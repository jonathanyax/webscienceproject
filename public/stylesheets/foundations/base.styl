html, body, div, span, applet, object, iframe,
	h1, h2, h3, h4, h5, h6, p, blockquote, pre,
	a, abbr, acronym, address, big, cite, code,
	del, dfn, em, img, ins, kbd, q, s, samp,
	small, strike, strong, sub, sup, tt, var,
	dl, dt, dd, ol, ul, li,
	fieldset, form, label, legend,
	table, caption, tbody, tfoot, thead, tr, th, td
	margin: 0
	padding: 0
	border: 0
	outline: 0

html
	box-sizing border-box
	
*, *:before, *:after
	box-sizing inherit

body
	font-family lane-narrow, Hevetica Neue, Arial, sans-serif
	font-weight 200
	font-size 16px
	overflow scroll
	overflow-x hidden
	
div.modal_full_wrapper
	display none
	position absolute
	width 100%
	height 100%
	background rgba(color--black, .9)
	z-index 20
	top 0
	@media screen and (min-width: mq--tablet)
		margin-left -175px

div.modal
	display none
	position relative
	margin 0 50px 4px 6px
	background color--white
	padding 10px
	box-shadow 0 0 4px darken(color--white-blue, 5%)
	border 1px solid darken(color--white-blue, 5%)
	border-radius 10px
	@media screen and (min-width: mq--tablet)
		margin 20px 60px 0 auto
	&:after, &:before
		position absolute
		content " "
		left 100%
		bottom 28px
		width 0
		height 0
		pointer-events none
		border solid transparent
		@media screen and (min-width: mq--tablet)
			top 28px
			bottom auto
	&:after
		border-color rgba(color--white, 0)
		border-left-color color--white
		border-width 10px
		margin-top -10px
	&:before
		border-color rgba(darken(color--white-blue, 5%), 0)
		border-left-color darken(color--white-blue, 5%)
		border-width 12px 
		margin-top -12px 
	.modal_disabled
		border-radius 10px
		width 100%
		height 100% 
		display block
		position absolute
		top 0
		left 0
		background rgba(color--white-blue, .7)
		&:after
			content "You must sign in first!"
			display block
			color color--primary
			text-stroke 1px color--primary
			margin-top 10%
			font-size 2em
			text-align center
	input, textarea
		border-radius 0
		font-family font--helvetica-neue
		font-size .9em
		border 1px solid lighten(color--medium-grey, 70%)
		&:focus
			border-color color--primary  
	.upload-image
		color transparent
		border none
		margin-bottom 0
		&::-webkit-file-upload-button
			visibility hidden
		&::before
			content "Upload Photo"
			color color--primary
			display inline-block
			background url(../../images/camera.png) no-repeat 10px 50% transparent
			background-size 30px
			border 1px solid lighten(color--medium-grey, 70%)
			padding 10px 0 10px 50px
			white-space nowrap
			-webkit-user-select none
			cursor pointer
			width 100%
	&:not(.modal_full) .upload-image::before
		@media screen and (min-width: mq--tablet)
			text-align center
			background url(../../images/camera.png) no-repeat 50% 34% transparent
			background-size 40px
			padding 58px 0 24px 0
			font-size .9em
				
div.modal_full
	display block
	margin 150px auto 0 auto
	@media screen and (min-width: mq--tablet)
		margin-left 1
	span.upload_text
		display block
		font-size 12px
		font-family font--helvetica-neue
		line-height 1
		margin-bottom 15px
		font-weight bold
		span
			color color--primary
			font-weight normal
	&::before, &::after
		border none
	#point_submit
		margin-top -10px
		margin-bottom 0
		border none
		background color--primary
		color color--white
		text-transform capitalize
		font-weight 300 
		font-size 1em
		letter-spacing -0.02em
	.upload-image::before
		display block
		margin 0 auto
		text-align center
		background url(../../images/camera.png) no-repeat 50% 34% transparent
		background-size 40px
		padding 58px 0 24px 0
		font-size .9em