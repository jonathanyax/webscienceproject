/*****************
 * SEARCH PAGE
 ****************/
 
section#search_data
	margin-top 1em
	div.section_title
		display inline-block
		width 100%
		padding 0 0 .25em
		border-bottom 2px solid color--primary
		h2
			font-size 1.7em
			margin 0
			float left
	div#search_history
		button.delete
			@media screen and (min-width: mq--phablet)
				margin-top 0
				height 34px
				line-height 1em
				padding 0
			float right
			margin-bottom 0
			margin-top 5px
			height 24px
			line-height .75em
			span
				font-size 1em
				padding 0 .5em
				@media screen and (min-width: mq--phablet)
					font-size: .75em
				@media screen and (min-width: mq--desktop)
					padding 0 .75em
					font-size 1em
				i
					font-size 1.25em
					vertical-align -2px
					padding 0 .25em 0 0
				i.icon-del
					@media screen and (min-width: mq--desktop)
						display inline
					display none

ul.points_list
	margin .5em 0
	li
		list-style-type none
		margin-bottom 1rem
	div.point_item
		font-family font--helvetica-neue
		overflow auto
		color color--dark-grey
		background color--light-grey
		ul.point_item_metadata
			list-style-type none
			margin 0
			li
				display inline
				margin 0 1em 0 0
				i
					padding 0 .25em 0 0
				i.fa-comment
						vertical-align text-top
		div.point_item_image
			float left
			width 30%
			img
				display: block
				object-fit cover
				min-height 175px
		div.point_item_info
			float right
			width 70%
			padding 0.25em .75em
		h2, h3
			font-family font--helvetica-neue
			letter-spacing normal
			color color--dark-grey
		h2
			font-weight 400
			font-size 1.25em
			margin-bottom .5em
		h3
			font-weight 200
			font-size 1em
			margin-bottom .25em
		&:hover, &:hover h2, &:hover h3
			color color--primary

ul.search_list
	li
		list-style-type none
		margin 0 0 .5em 0
		a
			text-decoration none
			color color--dark-grey
			&:hover
				color color--primary

