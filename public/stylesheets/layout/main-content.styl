/*****************
 * POINT PAGE
 ****************/

section.point_breadcrumbs
	background color--light-grey
	margin 0 0 1em 0
	@media screen and (min-width: mq--tablet)
		background transparent
		border-top 1px solid darken(color--light-grey, 10%)
		border-bottom 1px solid darken(color--light-grey, 10%)
	div.crumbs
		padding .5em 0
		ul
			font-family font--helvetica-neue
			font-size .65em
			color color--white
			list-style-type none
			@media screen and (min-width: mq--tablet)
				font-size .8em
				font-family font--lane-narrow
				text-stroke .03em color--primary
			@media screen and (min-width: mq--tablet)
				font-size 1em
			li
				display inline-block
				padding 0 .5em 0 0
				a
					color color--primary
					text-decoration none
					&:hover
						color color--primary-dark
				&:after
					padding 0 0 0 .5em
					content "/"
					color color--medium-grey
					@media screen and (min-width: mq--phablet)
							text-stroke 0em
				&:last-child
					a
						color color--medium-grey
						@media screen and (min-width: mq--phablet)
							text-stroke .04em color--medium-grey
					&:after
						content none
section#point_display
	color color--medium-grey
	padding 0
	word-break break-word
	h2
		font-weight normal
		font-size 1.6em
		margin-bottom .5em
		text-align center
		text-stroke .02em color--medium-grey
		@media screen and (min-width: mq--phablet)
			text-align left
			font-size 2em 
		@media screen and (min-width: mq--tablet)
			font-size 2.5em
	ul
		list-style-type none
		margin 0 0 1.25em 0
	section#point_visual
		@media screen and (min-width: mq--phablet)
			float right
	section#point_data
		padding 1em 0
		@media screen and (max-width: mq--phablet)
			width 100%
		@media screen and (min-width: mq--phablet)
			margin-left 0
			background color--light-grey
		div.point_social
			@media screen and (min-width: mq--phablet)
				margin 0 0 -20px 0
				float right
			ul
				list-style-type none
				@media screen and (min-width: mq--phablet)
					background color--primary
					width 56px
					padding 0 .3em
				@media screen and (min-width: mq--tablet)
					width 86px
			li
				display inline-block
				width 25%
				vertical-align top
				padding .4em 0
				background color--primary
				@media screen and (min-width: mq--phablet)
					display block
					width 100%
					height 55px
					border-bottom color--primary-dark 1px solid
					&:last-of-type
						border none
				@media screen and (min-width: mq--tablet)
					height 86px
					padding .8em 0
				a
					text-align center
					font-size .7em 
					background color--primary
					display inline-block
					padding .7em 
					color color--white
					text-decoration none
					border-right color--primary-dark 1px solid
					width 100%
					text-stroke .05em color--white
					@media screen and (min-width: mq--phablet)
						border-right none
						padding .7em .1em
						font-size .65em
					@media screen and (min-width: mq--tablet)
						font-size .8em
					i
						display block
						font-size 1.5em
						text-stroke 0
						@media screen and (min-width: mq--tablet)
							font-size 2em
				a:hover
					background color--dark-green
		div.point_map
			background color--medium-grey
			height 120px
			@media screen and (min-width: mq--phablet)
				border 10px solid color--light-grey
				margin-right 56px
			@media screen and (min-width: mq--tablet)
				height 290px
				border 20px solid color--light-grey
				margin-right 86px
		div.point_address
			background color--light-grey
			color color--dark-grey
			text-stroke .03em color--dark-grey
			font-size .7em 
			letter-spacing .04em
			span.point_address_street:after
				content: ", "
			@media screen and (min-width: mq--phablet)
				height 50px
				line-height 1.2
				font-size .8em  
				p
					width 100%
					padding 0 10px
					margin-right 60px
					span.point_address_city
						display block
				span.point_address_street:after
					content: ""
			@media screen and (min-width: mq--tablet)
				padding 0 0 0 10px
				font-size 1em 
	section#point_comments
		margin-top 22px
		@media screen and (min-width: mq--phablet)
			margin 22px 0 0 0
		h3
			font-size 16px
			border-bottom 1px solid darken(color--light-grey, 10%)
			color color--dark-grey
			text-stroke .02em color--dark-grey
			@media screen and (min-width: mq--tablet)
				font-size 22px
		li
			margin 1em 0
			span.author-pic img
				width 30px
				height 30px
				border-radius 15px
				float left
				@media screen and (min-width: mq--tablet)
					width 38px
					height 38px
					border-radius 19px
			span.author, span.comment
				display block
				margin-left 45px
				@media screen and (min-width: mq--tablet)
					margin-left 50px
			span.author
				font-size 14px
				text-stroke .02em color--medium-grey
				@media screen and (min-width: mq--tablet)
					font-size 17px
			span.comment
				font-size 12px
				color color--dark-grey
				font-family font--helvetica-neue
				line-height 1.3 
				@media screen and (min-width: mq--tablet)
					font-size 13px

