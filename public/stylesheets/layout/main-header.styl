header
	@media screen and (min-width: mq--tablet)
		text-align center
	h1
		color color--medium-grey
	h1.onpoint_title
		display none
		@media screen and (min-width: mq--tablet)
			display block
			padding .15em 0
		span
			@media screen and (min-width: mq--tablet)
				vertical-align middle
		a
			
			span.onpoint_title_text
				@media screen and (min-width: mq--tablet)
					display inline-block
					line-height 1.5em
					padding 0 0 0 0
					text-stroke 1px
	a
		text-decoration none
		color color--dark-grey 
		@media screen and (min-width: mq--tablet)
			display inline-block
		&:hover
			text-decoration none
			@media screen and (min-width: mq--tablet)
				color color--black
	.icon-onpoint
		color color--primary
		margin-left 18px
		font-size 86px
		text-stroke 0
		display inline-block
	input#search
		font-family FontAwesome
		font-style normal
		font-size 1em
		line-height 1.5em
		font-weight normal
		text-decoration inherit
		border solid 2px color--white-blue
		padding 1.5em 1em
		margin 1em 0 0 0
		&:focus
			border-color color--primary
	div.addpoint
		position fixed
		bottom 0
		right 10px
		z-index 100 
		@media screen and (min-width: mq--tablet)
			position absolute
			right .5em
			top .25em
		a
			padding 0
			display inline-block
			float right
			font-size 2.5em
			color color--primary
			position absolute
			bottom 0
			right 0
			@media screen and (min-width: mq--tablet)
				padding .5em 0 .5em .5em
				position relative
			&:hover, &.addpoint_open
				color color--blue-grey
				text-decoration none
				
div.addpoint_modal
	#point_name
		background url(../../images/PointName.png) no-repeat 10px center
		background-size 22px 22px
		padding-left 40px
		width calc(100%-40px)
	#point_address
		background url(../../images/Address.png) no-repeat 10px center
		background-size 22px 22px
		padding-left 40px
		width calc(100%-40px)
	#point_city
		background url(../../images/City.png) no-repeat 10px center
		background-size 22px 22px
		padding-left 40px
		width 70%
		@media screen and (min-width: mq--tablet)
			width 82%
	#point_state
		width 25%
		float right
		@media screen and (min-width: mq--tablet)
			width 14%
	#point_comment
		margin-top -10px
		margin-bottom 10px
		@media screen and (min-width: mq--tablet)
			margin-top 0
			min-height 100px
	#point_submit
		margin-top -10px
		margin-bottom 0
		border none
		background color--primary
		color color--white
		text-transform capitalize
		font-weight 300 
		font-size 1em
		letter-spacing -0.02em 


			
	