nav
	background color--primary
	padding 0 .75em
	
	@media screen and (min-width: mq--mobile)
		padding 0 1em
		
	@media screen and (min-width: mq--tablet)
		background color--nav
		border-left .5em solid color--primary
		height 100vh
		width 175px
		position fixed
		float left
		padding 0   

	ul
		li
			display inline
		a, h1
			text-decoration none
			color color--dark-grey
			display inline-block
			padding 0 .25em
			@media screen and (min-width: mq--tablet)
				text-align center
		a
			@media screen and (min-width: mq--tablet)
				display block
				padding 0
				margin 0
				color color--dark-grey
		a:hover, a.current
			background color--primary-dark
			color color--white
			text-decoration none
			@media screen and (min-width: mq--tablet)
				color color--primary
				background none
		span.icon
			font-size 1.3em
			line-height 1.8
			@media screen and (min-width: mq--phablet)
				font-size 1.5em
			@media screen and (min-width: mq--tablet)
				display block
				text-stroke .4px
		span.icon_title
			display none 
			@media screen and (min-width: mq--tablet)
				display block
				text-transform uppercase
				margin .5em 0 0 0
			
	ul#logo
		float left
		margin-right 5px
		@media screen and (min-width: mq--phablet)
			margin-right 30px
		@media screen and (min-width: mq--tablet)
			display none
		h1
			font-size 1.25em
			font-weight normal
			line-height 1.5
			@media screen and (min-width: mq--phablet)
				font-size 1.5em
				line-height 1.3
			a:hover
				background none
		span
			vertical-align middle
		span.onpoint_title_text
			padding-top 10px 
			text-stroke 1px color--white
			letter-spacing 0
		span.icon-onpoint
			color color--white
			margin-left 5px
			font-size 1.4em
			
	ul#functions
		display flex
		flex-direction row
		text-align right
		@media screen and (min-width: mq--tablet)
			flex-direction column
			clear both
		li
			flex-grow 1
		a
			padding 0 .35em
			@media screen and (min-width: mq--mobile)
				padding 0 .75em
				margin 0
			@media screen and (min-width: mq--phablet)
				padding 0 1.25em
				margin 0 .25em
			@media screen and (min-width: mq--tablet)
				padding 1.25em 0
			span.icon_title
				text-stroke 1px color--dark-grey
			&:hover span.icon_title
				text-stroke 1px color--primary
				color color--primary
		a.current
			span.icon_title
				text-stroke 1px color--primary
				
	ul#settings
		display none
		@media screen and (min-width: mq--tablet)
			display block
			position absolute
			bottom 0
			margin 0
			width 100%
			background color--nav-settings
			font-size 1.25em
			li
				display inline
				width 100%
				a
					width 50%
					float left
					text-align center
					padding .75em 0
					line-height 1em
					color color--dark-grey
					text-stroke .4px
					&:hover
						text-stroke 1px color--primary
						color color--primary
					span
						vertical-align text-bottom
		
	div#user
		display none
		@media screen and (min-width: mq--tablet)
			display block
			padding 1em 0
			a
				display block
				width 120px
				margin 0 auto
				border-radius 50%
				color color--white
				text-decoration none
				padding 10px
				box-shadow 0 0 2px rgba(color--black, .2)
				text-align center
				&:hover span.user_icon_wrap
					background color--dark-grey
				span.user_icon_wrap
					 background color--blue-grey
					 display block
					 width 100px
					 height 100px
					 border-radius 50%
					 transition background 300ms ease-in-out
				span.icon_wrap
					display block
					padding .75em 0 0 0
				span.icon
					display block
					font-size 1.5em
					line-height 1.5em
				span.icon_title
					display block
					text-transform uppercase
					margin .5em 0 0 0
			
			