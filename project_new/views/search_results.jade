extend layout

block searchbar
	form
		input#search.u-full-width(type="search", placeholder!="&#xF002;")

block content
	section#search_results.container
		h3 Search Results for "boston"
		ul.points_list
			li
				a(href="/point")
					div.point_item
						div.point_item_image
							img(src="images/sample_grid/sample_068.JPG").u-max-full-width
						div.point_item_info
							h2 Boston Public Library
							h3 700 Boylston St.
							h3 Boston, MA
							ul.point_item_metadata
								li
									i.fa.fa-comment 
									| 5
								li
									i.fa.fa-camera 
									| 10
			